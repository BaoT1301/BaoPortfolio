---
import { getCurrentTimeInEST, formatTimeForEST } from "../lib/helpers";
import Card from "./Card/index.astro";
---

<script>
  import { onCleanup, onMount } from "solid-js";
  import { formatTimeForEST } from "../lib/helpers";

  let interval: ReturnType<typeof setInterval>;

  function updateClock() {
    const timeDisplay = document.getElementById("timeDisplay");
    const now = new Date();

    if (timeDisplay) {
      timeDisplay.textContent = formatTimeForEST(now);
      timeDisplay.setAttribute("datetime", now.toISOString());
    }
  }

  onMount(() => {
    interval = setInterval(updateClock, 1000);
  });

  onCleanup(() => {
    clearInterval(interval);
  });
</script>

<Card colSpan="md:col-span-1 lg:col-span-2" rowSpan="md:row-span-2" title="Time zone">
  <time
    class="text-xl sm:text-2xl lg:text-4xl xl:text-5xl whitespace-nowrap h-[calc(100%-28px)] font-serif flex justify-center items-center"
    datetime=""
    id="timeDisplay"
  >
    {formatTimeForEST(getCurrentTimeInEST())}
  </time>
</Card>
