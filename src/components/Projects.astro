---
import Card from "./Card/index.astro";

const projects = [
  {
    title: "Crypto Pilot",
    description: "Real-time trading backend with Node.js, Redis, and Binance WebSocket API. Cut p95 latency by 42%.",
    tech: ["Node.js", "MongoDB", "Redis", "AWS"],
    link: null, // Work in progress
  },
  {
    title: "FusionAI",
    description: "AI research chatbot with multi-document QA, deployed on Google Cloud Run with 35% faster cold-starts.",
    tech: ["Python", "Next.js", "LangChain", "GCP"],
    link: "https://www.fusionai.studio",
  },
];
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-2" title="Featured Projects">
  <div class="grid grid-cols-2 gap-2 h-full">
    {
      projects.map((project) => (
        project.link ? (
          <a
            href={project.link}
            target="_blank"
            class="group p-3 rounded-lg bg-neutral-800/50 hover:bg-neutral-700/50 transition-all border border-neutral-700/50 hover:border-neutral-600 flex flex-col justify-between"
          >
            <div class="flex flex-col gap-1">
              <h3 class="text-sm font-semibold text-neutral-100 group-hover:text-white transition-colors">
                {project.title}
              </h3>
              <p class="text-xs text-neutral-400 line-clamp-2">
                {project.description}
              </p>
            </div>
            <div class="flex flex-wrap gap-1 mt-2">
              {project.tech.map((tech) => (
                <span class="text-xs px-1.5 py-0.5 rounded bg-neutral-700/50 text-neutral-300">
                  {tech}
                </span>
              ))}
            </div>
          </a>
        ) : (
          <div class="group p-3 rounded-lg bg-neutral-800/50 border border-neutral-700/50 flex flex-col justify-between">
            <div class="flex flex-col gap-1">
              <h3 class="text-sm font-semibold text-neutral-100 flex items-center gap-2">
                {project.title}
                <span class="text-xs px-1.5 py-0.5 rounded bg-yellow-600/30 text-yellow-400">WIP</span>
              </h3>
              <p class="text-xs text-neutral-400 line-clamp-2">
                {project.description}
              </p>
            </div>
            <div class="flex flex-wrap gap-1 mt-2">
              {project.tech.map((tech) => (
                <span class="text-xs px-1.5 py-0.5 rounded bg-neutral-700/50 text-neutral-300">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        )
      ))
    }
  </div>
</Card>
